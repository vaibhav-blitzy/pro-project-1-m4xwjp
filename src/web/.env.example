# API Configuration
# Base URL for API requests (required)
# Used by api.config.ts for making HTTP requests
VITE_API_BASE_URL=http://localhost:3000

# API version for endpoint routing (required)
# Must match backend API version
VITE_API_VERSION=v1

# API request timeout in milliseconds (required)
# Maximum time to wait for API responses
VITE_API_TIMEOUT=30000

# WebSocket Configuration
# WebSocket server URL for real-time updates (required)
# Used by websocket.service.ts for real-time communication
VITE_WS_URL=ws://localhost:3000

# Application Configuration
# Application name for display and storage prefixing (required)
VITE_APP_NAME=Task Management System

# Application version for compatibility checks (required)
VITE_APP_VERSION=1.0.0

# Feature Flags
# Enable detailed logging for development (optional)
# Set to 'false' in production
VITE_ENABLE_LOGS=true

# Security Configuration
# Maximum file upload size in bytes (required)
# Default: 5MB (5242880 bytes)
VITE_MAX_UPLOAD_SIZE=5242880

# Internationalization
# Comma-separated list of supported locale codes (required)
# Must match available translation files
VITE_SUPPORTED_LOCALES=en,es,fr,de,ja

# Authentication Configuration (optional)
# OAuth client IDs for SSO providers
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id

# Performance Configuration (optional)
# Cache duration in seconds for API responses
VITE_CACHE_DURATION=300

# Maximum number of retries for failed requests
VITE_MAX_RETRIES=3

# UI Configuration (optional)
# Default theme mode (light/dark)
VITE_DEFAULT_THEME=light

# Maximum items per page for paginated lists
VITE_PAGE_SIZE=20

# Development Configuration (optional)
# Enable React strict mode
VITE_REACT_STRICT=true

# Enable API mocking for development
VITE_ENABLE_MOCK_API=false