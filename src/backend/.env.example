# Application Configuration
# -----------------------
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:5173
API_RATE_LIMIT=1000
API_RATE_WINDOW=15m
SERVICE_NAME=task-management-service

# Database Configuration
# --------------------
DATABASE_URL=postgresql://user:password@localhost:5432/task_management
DATABASE_SSL=false
DATABASE_SSL_CA=
DATABASE_SSL_KEY=
DATABASE_SSL_CERT=
DATABASE_MAX_POOL=20
DATABASE_MIN_POOL=4
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000
DATABASE_STATEMENT_TIMEOUT=60000

# Redis Configuration
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=tms:
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=
REDIS_TLS_ENABLED=false
REDIS_TLS_CERT=
REDIS_TLS_KEY=
REDIS_MIN_CONNECTIONS=5
REDIS_MAX_CONNECTIONS=20
REDIS_IDLE_TIMEOUT=10000
REDIS_RETRY_MAX_ATTEMPTS=5
REDIS_RETRY_INITIAL_DELAY=1000
REDIS_RETRY_MAX_DELAY=5000
REDIS_HEALTH_CHECK_ENABLED=true
REDIS_HEALTH_CHECK_INTERVAL=30000
REDIS_MEMORY_THRESHOLD=80

# RabbitMQ Configuration
# --------------------
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=task_management
RABBITMQ_DLX=task_management_dlx
RABBITMQ_RETRY_ATTEMPTS=5
RABBITMQ_RETRY_INTERVAL=5000
RABBITMQ_SSL_ENABLED=false
RABBITMQ_SSL_CA=
RABBITMQ_SSL_CERT=
RABBITMQ_SSL_KEY=

# Authentication Configuration
# -------------------------
JWT_SECRET=your-secret-key
JWT_EXPIRY=1h
JWT_ALGORITHM=HS256
REFRESH_TOKEN_SECRET=your-refresh-secret
REFRESH_TOKEN_EXPIRY=7d
AUTH_RATE_LIMIT=100
AUTH_RATE_WINDOW=15m
PASSWORD_HASH_ROUNDS=12
MFA_ENABLED=false
MFA_ISSUER=TaskManagement

# Email Configuration
# ----------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=true
EMAIL_FROM=noreply@taskmanagement.com
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000

# Monitoring Configuration
# ---------------------
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true
ENABLE_QUERY_LOGGING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6832
JAEGER_SERVICE_NAME=task-management
ENABLE_TRACING=true
TRACE_SAMPLE_RATE=0.1
METRICS_ENABLED=true
METRICS_PORT=9090

# Storage Configuration
# ------------------
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=task-management-files
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_SSL_ENABLED=true
FILE_UPLOAD_MAX_SIZE=10485760