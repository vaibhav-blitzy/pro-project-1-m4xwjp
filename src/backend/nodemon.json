{
  "watch": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "tests/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "coverage/**/*"
  ],
  "ext": "ts,json",
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1500",
  "verbose": true,
  "legacyWatch": false,
  "restartable": "rs",
  "colours": true,
  "events": {
    "start": "clear || cls",
    "restart": "clear || cls"
  },
  "signal": "SIGTERM",
  "stdout": true,
  "stdin": false,
  "quiet": false,
  "watch_options": {
    "followSymlinks": false,
    "usePolling": false,
    "interval": 1000,
    "binaryInterval": 1000
  }
}